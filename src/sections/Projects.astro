---
const projects = [
  {
    title: "nine-is-a-dev",
    description:
      "A personal website built with Astro, Vue, TailwindCSS and DaisyUI.",
    githubLink: "https://github.com/NineLEL/nine-is-a-dev",
    actionLink: "https://nine.is-a.dev",
  },
  {
    title: "Saiko's Pet",
    description: "A Discord bot with random features and image manipulation.",
    githubLink: "", // The bot is not open source
    actionLink:
      "https://discord.com/oauth2/authorize?client_id=927108202867359745&permissions=1738314997956433&integration_type=0&scope=bot",
  },
  {
    title: "card-nine-is-a-dev",
    description: "A personal card, still in development.",
    githubLink: "", // In development
    actionLink: "",
  },
];
---

<div class="min-h-screen flex items-center justify-center">
  <div class="container px-4">
    <div class="title-container mb-8">
      <h1
        class="text-5xl font-extrabold lg:text-7xl leading-tight text-primary"
      >
        Projects
      </h1>
    </div>
    <div class="project-container-wrapper overflow-x-auto">
      <div class="project-container flex space-x-3 mt-8">
        {
          projects.map((project) => (
            <div class="card bg-base-200 w-96 shadow-md">
              <div class="card-body">
                <h2 class="card-title text-2xl font-bold">{project.title}</h2>
                <p>{project.description}</p>
                <div class="card-actions justify-end">
                  {project.githubLink && (
                    <a
                      href={project.githubLink}
                      target="_blank"
                      class="btn btn-base bg-base-100 flex items-center"
                    >
