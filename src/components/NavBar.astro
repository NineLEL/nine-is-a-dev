<script>
  // Get the checkbox element
  const checkbox = document.getElementById(
    "theme-switcher"
  ) as HTMLInputElement;

  // Get the current theme from checkbox state
  const getCurrentTheme = () => (checkbox.checked ? "light" : "dark");

  // Export the theme state (for other modules or scripts)
  window.getTheme = getCurrentTheme;
</script>
